{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File",
            "Serilog.Sinks.Seq",
            "Serilog.Sinks.Debug"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            },
            "Enrich": [ "FromLogContext" ],
            "WriteTo": [
                { "Name": "Console" },
                { "Name": "Debug" },
                {
                    "Name": "File",
                    "Args": {
                        "path": "%LogDir%\\sampleapp\\log-{Date}.txt",
                        "rollingInterval": "Day",
                        "shared": true
                    }
                }
            ]
        },
        "Properties": {
            "Application": "sampleapp"
        }
    },

    "SEQ_URL": "http://localhost:5341",

    "AllowedHosts": "*"
}
