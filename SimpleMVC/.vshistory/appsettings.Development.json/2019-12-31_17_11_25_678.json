{
    "Serilog": {
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console"
                        },
                        {
                            "Name": "Debug"
                        },
                        {
                            "Name": "DiagnosticTrace"
                        },
                        {
                            "Name": "File",
                            "Args": {
                                "path": "Logs\\sampleapp\\log-{Date}.txt",
                                "rollingInterval": "Day",
                                "retainedFileCountLimit": 8,
                                "buffered": true
                            }
                        }
                    ]
                }
            }
        ]
    }
}
